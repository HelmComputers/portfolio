<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"

            >
       <ImageView
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:id="@+id/app_icon"
               tools:src="@drawable/epaca"
               android:layout_centerVertical="true"
               />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_text_view"
                android:text="@string/recycler_view_apps_title"
                android:layout_toRightOf="@id/app_icon"
                android:padding="8dp"

                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/app_title"
                android:layout_toRightOf="@id/title_text_view"
                tools:text="PACA"
                android:padding="8dp"

                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_text_view"
                android:text="@string/recycler_view_apps_status"
                android:layout_below="@id/title_text_view"
                android:layout_toRightOf="@id/app_icon"
                android:padding="8dp"

                />

        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_title"
                android:layout_toRightOf="@id/status_text_view"
                android:id="@+id/app_status"
                tools:text="DEVELOPING"
                android:padding="8dp"


                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/os_text_view"
                android:text="@string/recycler_view_apps_os"
                android:layout_below="@id/status_text_view"
                android:layout_toRightOf="@id/app_icon"
                android:padding="8dp"

                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/app_status"
                  android:layout_toRightOf="@id/status_text_view"
                  android:id="@+id/app_os"
                  tools:text="ANDROID"
                  android:padding="8dp"


                />


    </RelativeLayout>
</android.support.v7.widget.CardView>